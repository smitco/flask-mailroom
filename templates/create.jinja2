{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
<ul>
<form method="POST">
    {% if error %}<p>Error: {{ error }}</p>{% endif %}
    <label for="name-input">Donor Name: </label><input id="name-input" type="text" name="name">
    <br>
    <label for="value-input">Donation Value: </label><input id="value-input" type="number" name="value">
    <br>
    <input type="submit" value="Add Donation">
    
</form>
</ul>
{% endblock content %}
